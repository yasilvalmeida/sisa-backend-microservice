generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TipoToken {
  Activacao
  Recuperacao
}

enum TipoLogin {
  Sucesso
  Falhado
}

model Token {
  id        BigInt    @id @default(autoincrement())
  email     String    @unique
  validade  DateTime
  tipo      TipoToken
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Login {
  id        BigInt    @id @default(autoincrement())
  email     String    @unique
  tentativa Int       @default(0)
  tipo      TipoLogin
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
