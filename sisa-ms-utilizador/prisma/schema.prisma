generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Acesso {
  Administrador          @map("Administrador")
  Validador              @map("Validador")
  Parceiro               @map("Parceiro")
  UnidadeExecucaoProjeto @map("UnidadeExecucaoProjeto")
}

model Utilizador {
  id        Int      @id @default(autoincrement())
  nome      String?
  apelido   String?
  email     String   @unique
  bloqueado Boolean? @default(false)
  eliminado Boolean? @default(false)
  acesso    Acesso
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
